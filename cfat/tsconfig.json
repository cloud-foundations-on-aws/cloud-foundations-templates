{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"strict": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"outDir": "./build",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "./**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
